{
  "name": "informed",
  "version": "4.7.0",
  "description": "A lightweight framework and utility for building powerful forms in React applications",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "index.d.ts",
  "files": [
    "dist/",
    "index.d.ts"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "start": "npm run storybook -s public",
    "build": "rm -rf dist && rollup --config",
    "test": "jest",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:ts": "npx tsd",
    "preversion": "npm run test:jest",
    "version": "npm run build",
    "postversion": "git push",
    "postpublish": "git push --tags",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "storybook:docs": "build-storybook -c .storybook -s public -o docs",
    "build:docs": "rm -r docs/ && build-storybook -c .storybook -o docs",
    "prettier": "prettier --write 'src/**/*.{js,md}' 'tests/**/*.{js,md}' 'stories/**/*.{js,md}'",
    "pretty-quick": "pretty-quick",
    "lint:fix": "eslint src/** tests/** stories/** --fix",
    "coveralls": "NODE_ENV=spec nyc npm test && nyc -x 'src/debug.js' report --reporter=text-lcov | coveralls",
    "test:coverage": "NODE_ENV=spec nyc -x 'src/debug.js' mocha-webpack --exit --opts tests/mocha-webpack.opts",
    "test:coverage-html": "NODE_ENV=spec nyc -x 'src/debug.js' --reporter=html mocha-webpack --exit --opts tests/mocha-webpack.opts && http-server coverage -o -p 8007"
  },
  "jest": {
    "verbose": true,
    "testRegex": "/__tests__/.*",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/teslamotors/informed.git"
  },
  "author": {
    "name": "Joseph Puzzo",
    "email": "jgpuzzo2@gmail.com",
    "url": "http://joepuzzo.github.io"
  },
  "keywords": [
    "form",
    "react-form",
    "forms",
    "informed",
    "react",
    "hooks",
    "validation",
    "reactjs",
    "redux",
    "react-redux",
    "redux-form"
  ],
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.15.4",
    "@babel/preset-react": "^7.0.0",
    "@codesandbox/sandpack-react": "^0.1.15",
    "@emotion/core": "^10.0.10",
    "@emotion/styled": "^10.0.10",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@storybook/addon-options": "^5.3.21",
    "@storybook/addons": "^6.3.12",
    "@storybook/react": "^6.4.19",
    "@storybook/theming": "^6.3.12",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.2.0",
    "ajv": "^6.12.6",
    "ajv-errors": "^1.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-emotion": "^9.2.6",
    "babel-plugin-macros": "^2.4.0",
    "chai": "^4.1.2",
    "core-js": "^2.5.7",
    "coveralls": "^3.0.2",
    "css-loader": "^1.0.0",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.9.1",
    "eslint": "^7.26.0",
    "eslint-plugin-react": "^7.10.0",
    "highlight.js": "^9.15.6",
    "html-loader": "^0.5.5",
    "husky": "^4.3.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jest": "^27.1.0",
    "jsdom": "^11.12.0",
    "lint-staged": "^10.5.1",
    "markdown-loader": "^3.0.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-webpack": "^2.0.0-beta.0",
    "nyc": "^12.0.2",
    "patch-package": "^5.1.1",
    "prettier": "1.14.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.1",
    "react-live": "^2.2.3",
    "react-prism": "^4.3.2",
    "regenerator-runtime": "^0.13.9",
    "rollup": "^2.56.3",
    "sass-loader": "^7.1.0",
    "sinon": "^6.1.5",
    "storybook-dark-mode": "^1.0.8",
    "storybook-readme": "^5.0.9",
    "style-loader": "^0.22.1",
    "tsd": "^0.18.0",
    "universal-dotenv": "^1.8.3",
    "webpack": "^4.29.6",
    "webpack-bundle-analyzer": "^3.7.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^4.7.4",
    "webpack-node-externals": "^1.7.2",
    "yup": "^0.28.1"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0"
  },
  "nyc": {
    "instrument": false,
    "sourceMap": false,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "config",
      "tests",
      "src/index.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:jest"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
